# Promting user to input desired numbers
first_number=input("Enter the first number")
second_number=input("Enter the second number")

#Coverting the input into integers
first_number=int(first_number)
second_number=int(second_number)

choice=input("Select the operation\n + for add\n - for subtract \n* for multiply \n / for division")

#Operations
if choice == "+":
	summation=(first_number +second_number)	
	print("the sum is;",summation)

elif choice== "-":
	subtract=first_number - second_number
	print("The difference is;",subtract)

elif choice== "*":
	multiply=first_number * second_number
	print("the product is :",multiply)

elif choice=="/":
	division=first_number/second_number
	print("division is: ",division)

else:
	print("Not a valid choice,choose again")



